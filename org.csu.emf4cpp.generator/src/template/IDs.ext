import org::eclipse::emf::ecore;

extension template::FQN;

List[EStructuralFeature] getParentsEstructuralFeatures(EClass this): 
	this.EAllStructuralFeatures.select(e|e.EContainingClass != this)
;

String getCPPFQN(EStructuralFeature this) :
	getCPPFQN(this, EContainingClass)
;

cached String getCPPFQN(EStructuralFeature this, EClass class) :
	let p = class.EPackage :
	"::" + p.getFQN() + "::" + p.name.toFirstUpper() + "Package::" + class.name.toUpperCase() + "__" + name.toUpperCase()
;

